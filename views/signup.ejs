<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meal Crew </title>
    <link href="./style.css" rel="stylesheet">
</head>

<body>
    <!--- navigation start---->
    <div class="navbar">
        <div class="nav_logo">
            <a href="/"> <img src="/logos/mealcrewmain1.png" alt="LOGO" /> </a>
        </div>
        <div class="nav_menu"> <a href="/">Home</a>
            <a href="/latest_recipe">Latest recipe</a>
            <div class="dropdown">
                <button class="dropbtn">Cuisine<i class="fa fa-caret-down"></i></button>
                <div class="dropdown-content">
                    <a href="/recipe/Indian">Indian</a>
                    <a href="/recipe/Korean">Korean</a>
                    <a href="/recipe/Brazilian">Brazilian</a>
                    <a href="/recipe/Venezuelan">Venezuelan</a>
                </div>
            </div>
            <div class="loginbtn">
                <a href="/login">LOGIN</a>
            </div>
        </div>
    </div>
    <!---Navigation Finish--->

    <!---Internal Content  start--->
    <div class="mainarea">
        <center>
            <div class="register_top_text">
                <h3>Save Your Favourite Recipes, Shopping list & Find where to buy Ingredients.</h3>
            </div>
            <div class=div_main_form>
                <form id="myForm">
                    <label for="fname">First Name</label><br/>
                    <input type="text" name="f_irstname" placeholder="Enter Firstname "><br/>
                    <label for="lname">Last Name</label><br/>
                    <input type="text" name="l_astname" placeholder="Enter Lastname "><br/>
                    <label for="e_mail">Email Address</label><br/>
                    <input type="text" name="e_mail" placeholder="Enter Email"><br/>
                    <label for="p_word">Password</label><br/>
                    <input type="password" name="p_assword" placeholder="Enter password"><br/>
                    <button type="submit" class="waves-effect waves-light btn">Sign Up</button>
                </form>
            </div>
        </center>


    </div>

    <script>
        document.getElementById("myForm").onsubmit = (e) => {
            e.preventDefault();
            const url = "https://mealcrew.herokuapp.com/crewMembers";
            var data = new URLSearchParams();
            for (const pair of new FormData(e.target)) {
                // console.log(pair)
                data.append(pair[0], pair[1])
            }
            fetch(url, {
                    method: "post",
                    body: data,

                }).then(res => res.json())
                .then(res2 => {
                    console.log(res2)
                    location.reload()
                });
        }
    </script>





    <!---Internal Content  Finish--->

