    <script>
        document.getElementById("myloginForm").onsubmit = (e) => {
            e.preventDefault();
            const url = "http://localhost:5000/users";
            var data = new URLSearchParams();
            for (const pair of new FormData(e.target)) {
                // console.log(pair)
                data.append(pair[0], pair[1])
            }
            fetch(url, {
                    method: "get",
                    body: data,

                }).then(res => res.json())
                .then(res2 => {
                    console.log(res2)
                    location.reload()
                });
        }
    </script>


